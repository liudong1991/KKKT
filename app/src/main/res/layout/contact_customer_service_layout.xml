<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_layout" />
    </FrameLayout>

    <ImageView
        android:id="@+id/weixin_qr_code"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="#D8D8D8"
        android:src="@mipmap/weixin_client_qr" />

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weixin_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="客服微信二维码"
        android:textColor="@color/black"
        android:textSize="@dimen/large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt1"
        android:layout_centerHorizontal="true"
        android:text="长按可复制客服微信号"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />

    <ImageView
        android:id="@+id/qq_qr_code"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/weixin_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#D8D8D8"
        android:src="@mipmap/qq_client_qr" />

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qq_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="客服微信二维码"
        android:textColor="@color/black"
        android:textSize="@dimen/large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt2"
        android:layout_centerHorizontal="true"
        android:text="长按可复制客服微信号"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qq_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="客服座机：0871-63982821"
        android:textColor="@color/black"
        android:textSize="@dimen/large" />

</RelativeLayout>